<div data-controller='autocomplete'>
  <%= simple_form_for(@map) do |f| %>
    <div class="city-form">

      <div class="form-inputs">
        <%= f.input :city, label: false, input_html: { data: { autocomplete_target: 'searchField' } } %>
      </div>
      <%= f.input :latitude, label: false, as: :hidden, input_html: { data: { autocomplete_target: 'latitude' } } %>
      <%= f.input :longitude, label: false, as: :hidden, input_html: { data: { autocomplete_target: 'longitude' } } %>
      <%= f.input :google_place_id, label: false, as: :hidden, input_html: { data: { autocomplete_target: 'googlePlaceId' } } %>
      <div class="">
        <%= f.submit "Add a city", class: "btn-add-city" %>
      </div>
    </div>
  <% end %>
</div>




<div class="card-category-3">
  <ul>
    <% @maps.each do |map| %>
        <li class="card-item">
          <div class="card-content">
            <p><%= map.city.capitalize %></p>
            <% unsplash_photo = Unsplash::Photo.search(map.city).first %>
            <% if unsplash_photo %>
              <div class="image-container">
                <%= image_tag(unsplash_photo.urls.regular, class: "card-image") %>
              </div>
            <% else %>
              <p>No image found for <%= map.city %>.</p>
            <% end %>
            <a class="btn btn-add-city mt-2" href="/maps/<%= map.id %>">Open Map</a>
          </div>
        </li>
    <% end %>
  </ul>
</div>


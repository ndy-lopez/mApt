<div class="score-div"
  data-controller="compare"
  data-compare-potential-locations-value="<%= @potentialLocations.to_json %>"
  data-compare-map-id-value="<%= @map.id %>"
  data-compare-point-of-interests-value="<%= @pointOfInterests.to_json %>"
>

  <div class="card-category-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path("road.jpg") %>)">
      <h1 class="compare-heading"> Find the path that suits you.</h1>
        <button class="btn-ghost">
          <%= link_to 'Map page', map_path(@map) %>
       </button>
  </div>


 <div class="transportation-btn-div">
    <button class="btn-distances">
      <div class="transportation">
        <i class="fa-solid fa-bicycle fa-lg"></i>
      </div>
        <div>
          <p class="distance-name">Biking Distance</p>
        </div>
    </button>

     <button class="btn-distances">
        <div class="transportation">
          <i class="fa-solid fa-person-walking fa-lg"></i>
        </div>
          <div>
            <p class="distance-name"> Walking Distance</p>
          </div>
     </button>

     <button class="btn-distances">
          <i class="fa-solid fa-bus fa-lg"></i>
          <div>
            <p class="distance-name">Bus Distance</p>
          </div>
      </button>

     <button class="btn-distances">
        <div class="transportation">
          <i class="fa-solid fa-car fa-lg"></i>
        </div>
          <div>
            <p class="distance-name">Car Distance</p>
          </div>
      </button>
  </div>


  <% @pot_locs.each do |loc| %>
    <div
      class="adress-card-dropdown"
      id="<%= loc.id %>"
      data-compare-target="card"
    >
      <div class="adress-card">
        <%= loc.address %>
        <p class="score" >10</p>
        <%# loc.score %>
      </div>

      <%# <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <i class="fa-solid fa-angle-down" style="color: #bdbdbd;">
      </a> %>
      <div class="down-arrow" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          <%= image_tag("caret.png", height: '20', width: '20') %>
        </div>
      <div class="collapse" id="collapseExample">

            <div class="content">
              <div class="amneties-progress-bar" >
                <div>
                <% @pois.each do |poi| %>
                  <h5 class="poi_name"><%= poi.name %></h5>
                  <h6 class="time" >5 minutes</h6>
                <% end %>

                    </div>
                </div>


              </div>
            </div>
      </div>
    </div>
  <% end %>



</div>



